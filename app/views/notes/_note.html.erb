<div class="note">
  <div>
      <span class="note_title"><%= "#{note.title} 
        (#{time_ago_in_words(note.created_at)} ago)" %>
      </span>
      <%= link_to "Delete", [@book, note], 
        data: { confirm: "Note will be deleted?" }, 
        method: :delete %>
  </div>
  <div>
    <%= simple_format(note.note) %>
  </div>
</div>